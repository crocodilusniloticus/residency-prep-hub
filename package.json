{
  "name": "medchronos",
  "version": "1.1.1",
  "description": "A study tracker for medical exams.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crocodilusniloticus/residency-prep-hub.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "author": "ASh",
  "license": "ISC",
  "build": {
    "appId": "com.medchronos.app",
      "extraResources": [
    "credentials.json"
  ],
    "productName": "MedChronos",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!*.log",
      "!*.md",
      "!dist",
      "!out",
      "!repomix-output.xml",
      "!forge.config.js",
      "!.gitignore",
      "!.git"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico",
      "publish": [
        "github"
      ]
    },
    
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": {
      "provider": "github",
      "owner": "crocodilusniloticus",
      "repo": "residency-prep-hub"
    }
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@popperjs/core": "^2.11.8",
    "echarts": "^6.0.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.0",
    "flatpickr": "^4.6.13",
    "flatpickr-jalali-support": "^1.0.3",
    "googleapis": "^168.0.0",
    "jdate": "^0.0.2",
    "luxon": "^3.7.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3"
  }
}
